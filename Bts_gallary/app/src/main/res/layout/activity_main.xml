<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bts_image_1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/bts_1" />

        <ImageView
            android:id="@+id/bts_image_2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/bts_2" />

        <ImageView
            android:id="@+id/bts_image_3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/bts_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bts_image_4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/bts_4" />

        <ImageView
            android:id="@+id/bts_image_5"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/bts_5" />

        <ImageView
            android:id="@+id/bts_image_6"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/bts_6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bts_image_7"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/bts_7" />
    </LinearLayout>


</LinearLayout>