<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DishSideFragment">

    <TextView
        android:id="@+id/pageSideDish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="4. 밑반찬"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/checkDIshSideOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="미역줄기" />

        <CheckBox
            android:id="@+id/checkDIshSideOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="얼갈이무침" />

        <CheckBox
            android:id="@+id/checkDIshSideOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="무조림" />

        <CheckBox
            android:id="@+id/checkDIshSideOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="마늘쫑볶음" />

        <CheckBox
            android:id="@+id/checkDIshSideOption5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기타" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBack4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        android:text="이전"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnNext4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnNext4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="20dp"
        android:text="다음"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnBack4" />

</androidx.constraintlayout.widget.ConstraintLayout>